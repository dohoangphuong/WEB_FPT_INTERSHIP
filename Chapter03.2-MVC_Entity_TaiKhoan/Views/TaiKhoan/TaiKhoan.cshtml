@model IEnumerable<Chapter03._2_MVC_Entity_TaiKhoan.Models.Account>
@{
    ViewBag.Title = "TaiKhoan";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div id="results" class="results">
        <table border="1">
            <thead>
                <tr class="info">
                    <th>USER</th>
                    <th>NAME</th>
                    <th>PASSWORLD</th>
                    <th>ACCOUNTTYPE</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var agreement in Model)
                    {
                    <tr class="active">
                        <td>@agreement.ACCOUNTID</td>
                        <td>@agreement.NAME</td>
                        <td>@agreement.PASSWORLD</td>
                        <td>@agreement.ACCOUNTTYPE</td>
                        <td>
                            <input type="button" value="Select" onclick="location.href='@Url.Action("SelectAccount", "TaiKhoan", agreement)'" />
                            <input type="button" value="Delete" />
                        </td>
                    </tr>
                    }
            </tbody>
        </table>
    </div>
}